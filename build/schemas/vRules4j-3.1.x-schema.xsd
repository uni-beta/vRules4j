<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="vRules4j">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="global"/>
                <xs:element ref="imports"/>
                <xs:element ref="java"/>
                <xs:element ref="contexts"/>
                <xs:element ref="decisionConstants"/>
                <xs:element maxOccurs="unbounded" ref="object"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="global">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="decisionMode"/>
                <xs:element ref="assertion"/>
                <xs:element ref="returnErrorId"/>
                <xs:element ref="displayErrorValue"/>
                <xs:element ref="toggleBreakpoint"/>
                <xs:element ref="includes"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="decisionMode" type="xs:boolean"/>
    <xs:element name="assertion" type="xs:boolean"/>
    <xs:element name="returnErrorId" type="xs:boolean"/>
    <xs:element name="displayErrorValue" type="xs:boolean"/>
    <xs:element name="toggleBreakpoint" type="xs:NCName"/>
    <xs:element name="includes">
        <xs:complexType/>
    </xs:element>
    <xs:element name="imports">
        <xs:complexType/>
    </xs:element>
    <xs:element name="java">
        <xs:complexType/>
    </xs:element>
    <xs:element name="contexts">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="context"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="context">
        <xs:complexType>
            <xs:attribute name="className" use="required" type="xs:NCName"/>
            <xs:attribute name="name" use="required" type="xs:NCName"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="decisionConstants">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="definition"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="definition">
        <xs:complexType>
            <xs:attribute name="name" use="required"/>
            <xs:attribute name="value" use="required"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="object">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="className"/>
                <xs:element ref="nillable"/>
                <xs:element ref="rules"/>
            </xs:sequence>
            <xs:attribute name="desc" use="required"/>
            <xs:attribute name="extensions"/>
            <xs:attribute name="id" use="required" type="xs:NCName"/>
            <xs:attribute name="name" use="required" type="xs:NCName"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="className" type="xs:NCName"/>
    <xs:element name="nillable" type="xs:boolean"/>
    <xs:element name="rules">
        <xs:complexType>
            <xs:sequence>
                <xs:element maxOccurs="unbounded" ref="rule"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="rule">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="dataType"/>
                <xs:element ref="attributes"/>
                <xs:element ref="boolParam"/>
                <xs:element ref="assert"/>
                <xs:element ref="errorMessage"/>
                <xs:element ref="decision"/>
            </xs:sequence>
            <xs:attribute name="breakpoint" use="required" type="xs:NCName"/>
            <xs:attribute name="depends" use="required"/>
            <xs:attribute name="desc" use="required"/>
            <xs:attribute name="id" use="required" type="xs:NCName"/>
            <xs:attribute name="ifFalse" use="required"/>
            <xs:attribute name="ifTrue" use="required"/>
            <xs:attribute name="isComplexType" type="xs:boolean"/>
            <xs:attribute name="isMapOrList" type="xs:boolean"/>
            <xs:attribute name="name" use="required" type="xs:NCName"/>
            <xs:attribute name="recursive" type="xs:boolean"/>
            <xs:attribute name="refId" type="xs:NCName"/>
            <xs:attribute name="sequence" use="required" type="xs:integer"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="dataType" type="xs:string"/>
    <xs:element name="attributes" type="xs:NCName"/>
    <xs:element name="boolParam" type="xs:string"/>
    <xs:element name="assert" type="xs:string"/>
    <xs:element name="errorMessage">
        <xs:complexType mixed="true">
            <xs:attribute name="id" use="required" type="xs:NCName"/>
            <xs:attribute name="returnId" use="required" type="xs:boolean"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="decision">
        <xs:complexType/>
    </xs:element>
</xs:schema>
